#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# ==============================================================================
#  CONTROL SWITCH: Set to "true" to disable all checks and push directly.
# ==============================================================================
DISABLE_CHECKS="false"

if [ "$DISABLE_CHECKS" = "true" ]; then
    echo "âœ… Pre-push checks are temporarily disabled by the control switch. Pushing directly."
    exit 0
fi

# ==============================================================================
#  DETAILED CHECKS WITH LOGGING
# ==============================================================================
echo "ğŸš€ Running pre-push checks with detailed logging..."

# Variable to track if any check fails
ANY_CHECK_FAILED=0

# 1. Run PHPStan and log output
echo "ğŸ“Š Running PHPStan static analysis... (logs to reports/phpstan.txt)"
./vendor/bin/phpstan analyse --memory-limit=2G > reports/phpstan.txt 2>&1
if [ $? -ne 0 ]; then
    echo "âŒ PHPStan failed. See reports/phpstan.txt for details."
    ANY_CHECK_FAILED=1
fi

# 2. Run PHPUnit tests and log output
echo "ğŸ§ª Running PHPUnit tests... (logs to reports/phpunit.txt)"
./vendor/bin/phpunit --configuration=phpunit.xml > reports/phpunit.txt 2>&1
if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. See reports/phpunit.txt for details."
    ANY_CHECK_FAILED=1
fi

# 3. Run Laravel Pint and log output
echo "ğŸ¨ Running Laravel Pint code style check... (logs to reports/pint.txt)"
./vendor/bin/pint --test > reports/pint.txt 2>&1
if [ $? -ne 0 ]; then
    echo "âŒ Code style issues found. See reports/pint.txt for details."
    ANY_CHECK_FAILED=1
fi

# 4. Run PHPMD and log output
echo "ğŸ” Running PHPMD code quality check... (logs to reports/phpmd.txt)"
./vendor/bin/phpmd app,config,database,routes text phpmd.xml > reports/phpmd.txt 2>&1
if [ $? -ne 0 ]; then
    echo "âŒ PHPMD found issues. See reports/phpmd.txt for details."
    ANY_CHECK_FAILED=1
fi

# 5. Run Composer Audit and log output
echo "ğŸ”’ Running Composer security audit... (logs to reports/composer-audit.txt)"
composer audit > reports/composer-audit.txt 2>&1
if [ $? -ne 0 ]; then
    echo "âŒ Security vulnerabilities found. See reports/composer-audit.txt for details."
    ANY_CHECK_FAILED=1
fi

# Final check
if [ $ANY_CHECK_FAILED -ne 0 ]; then
    echo "--------------------------------------------------------------------"
    echo "ğŸ”¥ One or more pre-push checks failed. Push aborted."
    echo "ğŸ“‚ Detailed error reports have been saved in the 'reports' directory."
    exit 1
else
    echo "âœ… All pre-push checks passed! Ready to push."
    exit 0
fi
