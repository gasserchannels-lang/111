+// Function to clean old log files (older than specified days)
+function cleanOldLogFiles($directory, $daysOld = 7)
+{
+    if (! is_dir($directory)) {
+        echo "- Directory not found: {$directory}\n";
+        return 0;
+    }
+
+    $deletedCount = 0;
+    $cutoffTime = time() - ($daysOld * 24 * 60 * 60);
+
+    $files = glob($directory . '/*.log');
+    foreach ($files as $file) {
+        if (is_file($file) && filemtime($file) < $cutoffTime) {
+            if (unlink($file)) {
+                echo "✓ Deleted old log file: " . basename($file) . "\n";
+                $deletedCount++;
+            } else {
+                echo "✗ Failed to delete: " . basename($file) . "\n";
+            }
+        }
+    }
+
+    return $deletedCount;
+}
